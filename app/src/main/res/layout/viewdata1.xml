<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="366dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="latitude"
                android:id="@+id/textView16"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:cursorVisible="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="longitude"
                android:id="@+id/textView17"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText14"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:cursorVisible="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="location"
                android:id="@+id/textView18"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText21"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:cursorVisible="false"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Profile"
                android:id="@+id/textView19"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText22"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:cursorVisible="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Duration"
                android:id="@+id/textView20"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText23"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:cursorVisible="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Message"
                android:id="@+id/textView21"
                android:layout_margin="10dp"
                android:textColor="#fe0a90" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText24"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:background="@drawable/rounded2"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button17"
            android:layout_toEndOf="@+id/button17" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="Update Message"
            android:background="@drawable/rounded2"
            android:id="@+id/button14"
            android:layout_below="@+id/button18"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Previous"
            android:background="@drawable/rounded2"
            android:id="@+id/button17"
            android:layout_alignTop="@+id/button18"
            android:layout_toLeftOf="@+id/button14"
            android:layout_toStartOf="@+id/button14" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="next"
            android:background="@drawable/rounded2"
            android:id="@+id/button18"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView28"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button17"
            android:layout_below="@+id/button14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView29"
            android:layout_alignBottom="@+id/button14"
            android:layout_alignTop="@+id/button18"
            android:layout_alignLeft="@+id/button17"
            android:layout_alignStart="@+id/button17"
            android:layout_alignRight="@+id/button18"
            android:layout_alignEnd="@+id/button18"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>